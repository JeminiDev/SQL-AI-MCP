# MCP Server Environment Configuration Example
# Copy this file to .env and update with your values

# Authentication type: 'azure-ad' or 'sql'
AUTH_TYPE=sql

# Database server configuration
SERVER_NAME=localhost
SERVER_PORT=1433
DATABASE_NAME=test

# SQL Authentication credentials (required when AUTH_TYPE=sql)
SQL_USERNAME=sa
SQL_PASSWORD=YourSecurePassword123!

# Optional settings
TRUST_SERVER_CERTIFICATE=true  # Required for local development with self-signed certificates
CONNECTION_TIMEOUT=30
READONLY=false

# For Azure AD authentication, use:
# AUTH_TYPE=azure-ad
# SERVER_NAME=myserver.database.windows.net
# DATABASE_NAME=mydb